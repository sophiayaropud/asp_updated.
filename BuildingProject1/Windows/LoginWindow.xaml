<Window x:Class="BuildingProject.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="800" ResizeMode="NoResize">
    <Grid Height="434" VerticalAlignment="Center" HorizontalAlignment="Right" Width="800">
        <Button Content="LOGIN" Click="Login" Margin="220,245,216,154" FontSize="16" HorizontalAlignment="Stretch"/>
        <TextBox Name="Email" TextWrapping="Wrap" Margin="220,143,216,263" FontSize="16"/>
        <PasswordBox Name="Password" Margin="220,189,216,217" FontSize="16" MaxLength="25" PasswordChar="*"/>
        <Label Content="Register" Margin="220,294,473,112" FontSize="14" MouseLeftButtonUp="Register"/>
        <Label Content="Forgot your password?" Margin="432,294,216,112" FontSize="14" MouseLeftButtonUp="ForgotPassword"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="155,139,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.458,-0.606" Height="28" Width="49"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="124,185,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.458,-0.606" Height="28" Width="80"/>
    </Grid>
</Window>
